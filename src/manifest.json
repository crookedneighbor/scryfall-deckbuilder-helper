{
  "name": "Scryfall Deckbuilder Helper",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [{
    "js":      [ "scryfall.bundle.js" ],
    "matches": [
      "*://*.scryfall.com/*"
    ]
  }, {
    "js":      [ "edhrec.bundle.js" ],
    "matches": [
      "*://*.edhrec.com/*"
    ],
    "all_frames": true
  }],
  "externally_connectable": {
    "matches": [
      "*://*.scryfall.com/*",
      "*://*.edhrec.com/*"
    ]
  },
  "web_accessible_resources": [
    "scryfallEmbed.bundle.js"
  ],
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
