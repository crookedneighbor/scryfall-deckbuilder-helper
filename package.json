{
  "name": "shambleshark",
  "private": true,
  "version": "0.11.0",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "pretty": "prettier --write .",
    "lint": "eslint --ext ts .",
    "posttest": "npm run pretty && npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "NODE_ENV=production BROWSER=FIREFOX webpack",
    "build:chrome": "NODE_ENV=production BROWSER=GOOGLE_CHROME webpack",
    "start": "webpack serve"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/register": "^7.13.8",
    "@types/chrome": "0.0.133",
    "@types/jest": "^26.0.21",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^26.6.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.0.0",
    "css-loader": "^5.1.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^6.2.0",
    "fs-extra": "^9.1.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "prettier": "^2.2.1",
    "shortid": "^2.2.16",
    "string-replace-loader": "^3.0.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^5.27.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "bulma": "^0.9.2",
    "bulma-switch": "^2.0.0",
    "framebus": "^5.1.2",
    "scryfall-client": "^0.18.6"
  }
}
