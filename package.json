{
  "name": "shambleshark",
  "private": true,
  "version": "0.9.1",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "pretty": "prettier --write .",
    "lint": "eslint --ext ts .",
    "posttest": "npm run pretty && npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "BROWSER=FIREFOX node utils/build.js",
    "build:chrome": "BROWSER=GOOGLE_CHROME node utils/build.js",
    "start": "node utils/webserver.js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@types/chrome": "0.0.129",
    "@types/jest": "^26.0.20",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.1.1",
    "css-loader": "^4.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "fs-extra": "^9.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^0.11.2",
    "prettier": "^2.2.1",
    "shortid": "^2.2.16",
    "string-replace-loader": "^2.3.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "bulma": "^0.9.2",
    "bulma-switch": "^2.0.0",
    "framebus": "^5.1.0",
    "scryfall-client": "^0.18.6"
  }
}
