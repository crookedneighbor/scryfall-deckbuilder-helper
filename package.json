{
  "name": "scryfall-extend-extension",
  "private": true,
  "version": "0.1.0",
  "description": "A browser extension for adding features to the Scryfall site.",
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "posttest": "npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "BROWSER=FIREFOX node utils/build.js",
    "build:chrome": "BROWSER=GOOGLE_CHROME node utils/build.js",
    "start": "node utils/webserver.js"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.0",
    "file-loader": "^5.0.2",
    "fs-extra": "^8.1.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "^24.9.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1",
    "style-loader": "^1.1.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "bulma": "^0.8.0",
    "bulma-switch": "^2.0.0",
    "framebus": "^3.0.2",
    "scryfall-client": "^0.11.0"
  },
  "standard": {
    "globals": [
      "browser",
      "Scryfall",
      "ScryfallAPI",
      "afterEach",
      "beforeEach",
      "chrome",
      "describe",
      "expect",
      "it",
      "jest",
      "test"
    ]
  }
}
