{
  "name": "shambleshark",
  "private": true,
  "version": "0.4.0",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "posttest": "npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "BROWSER=FIREFOX node utils/build.js",
    "build:chrome": "BROWSER=GOOGLE_CHROME node utils/build.js",
    "start": "node utils/webserver.js"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.0",
    "html-loader": "^1.0.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.3",
    "string-replace-loader": "^2.2.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "bulma": "^0.8.0",
    "bulma-switch": "^2.0.0",
    "framebus": "^3.0.2",
    "scryfall-client": "^0.13.0"
  },
  "standard": {
    "globals": [
      "browser",
      "Scryfall",
      "ScryfallAPI",
      "afterEach",
      "beforeEach",
      "chrome",
      "describe",
      "expect",
      "it",
      "jest",
      "test"
    ]
  }
}
