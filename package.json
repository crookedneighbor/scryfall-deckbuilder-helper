{
  "name": "shambleshark",
  "private": true,
  "version": "0.14.0",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "pretty": "prettier --write .",
    "lint": "eslint --ext ts .",
    "posttest": "npm run pretty && npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "NODE_ENV=production BROWSER=FIREFOX webpack",
    "build:chrome": "NODE_ENV=production BROWSER=GOOGLE_CHROME webpack",
    "start": "webpack serve"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/register": "^7.17.7",
    "@types/chrome": "^0.0.183",
    "@types/jest": "^27.5.0",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-jest": "^28.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "fs-extra": "^10.1.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.4",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "shortid": "^2.2.16",
    "string-replace-loader": "^3.1.0",
    "ts-jest": "next",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "dependencies": {
    "bulma": "^0.9.3",
    "bulma-switch": "^2.0.4",
    "framebus": "^5.1.2",
    "scryfall-client": "^0.20.0"
  }
}
