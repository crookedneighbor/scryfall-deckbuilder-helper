{
  "name": "shambleshark",
  "private": true,
  "version": "0.13.1",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "pretty": "prettier --write .",
    "lint": "eslint --ext ts .",
    "posttest": "npm run pretty && npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "NODE_ENV=production BROWSER=FIREFOX webpack",
    "build:chrome": "NODE_ENV=production BROWSER=GOOGLE_CHROME webpack",
    "start": "webpack serve"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/register": "^7.13.16",
    "@types/chrome": "0.0.143",
    "@types/jest": "^26.0.23",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-jest": "^27.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.2.10",
    "fs-extra": "^10.0.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.0.3",
    "mini-css-extract-plugin": "^1.6.0",
    "prettier": "^2.3.0",
    "shortid": "^2.2.16",
    "string-replace-loader": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.2.2",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "bulma": "^0.9.2",
    "bulma-switch": "^2.0.0",
    "framebus": "^5.1.2",
    "scryfall-client": "^0.18.6"
  }
}
