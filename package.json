{
  "name": "shambleshark",
  "private": true,
  "version": "0.5.0",
  "description": "Unofficial browser extension to add functionality to the Scryfall website. This extension is not developed by the Scryfall team.",
  "scripts": {
    "pretty": "prettier --write .",
    "lint": "eslint --ext ts .",
    "posttest": "npm run pretty && npm run lint",
    "test": "jest",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:firefox": "BROWSER=FIREFOX node utils/build.js",
    "build:chrome": "BROWSER=GOOGLE_CHROME node utils/build.js",
    "start": "node utils/webserver.js"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/register": "^7.10.1",
    "@types/chrome": "0.0.114",
    "@types/jest": "^25.2.3",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-jest": "^26.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.1",
    "css-loader": "^3.5.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "file-loader": "^6.0.0",
    "fork-ts-checker-notifier-webpack-plugin": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "fs-extra": "^9.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^2.0.5",
    "shortid": "^2.2.15",
    "string-replace-loader": "^2.3.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.5",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "bulma": "^0.8.2",
    "bulma-switch": "^2.0.0",
    "framebus": "^4.0.0",
    "scryfall-client": "^0.14.2"
  }
}
